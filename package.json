{
  "name": "bugsy",
  "version": "2.2.3",
  "description": "Helper to deal with errors lifecycle in javascript",
  "author": "Nicolas Jakob <nicow.jakob@gmail.com>",
  "main": "lib/index.js",
  "license": "MIT",
  "homepage": "https://github.com/njakob/bugsy",
  "repository": {
    "type": "git",
    "url": "git://github.com/njakob/bugsy.git"
  },
  "bugs": {
    "url": "https://github.com/njakob/bugsy/issues"
  },
  "keywords": [
    "bug",
    "error",
    "exception",
    "code",
    "universal",
    "isomorphic",
    "browser",
    "severity",
    "syslog",
    "handler",
    "helper",
    "catch",
    "rethrow",
    "backend",
    "api"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "build": "babel src -d lib --ignore '*.test.js' && flow gen-flow-files --out-dir lib src/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "flow": "flow check",
    "test": "ava",
    "test:watch": "ava -w",
    "validate": "npm run lint && npm run flow && npm run test",
    "bump:major": "npm version major -m \"Bump to %s\"",
    "bump:minor": "npm version minor -m \"Bump to %s\"",
    "bump:patch": "npm version patch -m \"Bump to %s\"",
    "prepublish": "npm run validate && npm run build"
  },
  "devDependencies": {
    "ava": "^0.18.1",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-syntax-flow": "^6.13.0",
    "babel-plugin-transform-builtin-extend": "^1.1.0",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-0": "^6.5.0",
    "eslint": "^3.15.0",
    "eslint-config-njakob": "^4.1.0",
    "eslint-plugin-flowtype": "^2.18.2",
    "eslint-plugin-import": "^2.2.0",
    "flow-bin": "^0.39.0",
    "rimraf": "^2.5.4"
  },
  "ava": {
    "require": "babel-register",
    "babel": "inherit"
  }
}
